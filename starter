from turtle import *
from random import randint

speed(0)
penup()
goto(-140, 140)


#these next few lines draw the racetrack. don't touch them!
for step in range(15):
  write(step, align='center')
  right(90)
  for num in range(8):
    penup()
    forward(10)
    pendown()
    forward(10)
  penup()
  backward(160)
  left(90)
  forward(20)


#we created your first turtle for you! use this code to create more!
ada = Turtle()
ada.color("red")
ada.shape("turtle")

ada.penup()
ada.goto(-160, 100)
ada.pendown()

for turn in range(10):
  ada.right(36)

